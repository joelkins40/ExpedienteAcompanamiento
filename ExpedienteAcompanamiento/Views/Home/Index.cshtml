@{
    ViewBag.Title = "Home Page";
}

@section css {
    <link rel="stylesheet" href="~/Content/personal.css" type="text/css" />
}

@section scripts {
    <script src="~/Scripts/services/contacto.service.js"></script>
    <script>
        function domIsReadyGeneralInfo(){
            (async function () {
                toggleGeneralLoader();
                const initialSettings = await getContactosInformation();
                for (let key in initialSettings){
                    $(`#general-${key}`).val(initialSettings[key]);
                }
                toggleGeneralLoader();
            })();
        }

        function toggleGeneralLoader(){            
            if ($("#general:hidden").length === 1) {
                $(`#general`).attr("style", "display: block");
                $(`#general-skeleton`).attr("style", "display: none");
                return;
            }

            $(`#general-skeleton`).attr("style", "display: block");
            $(`#general`).attr("style", "display: none");
        }
        
        $(document).ready(domIsReadyGeneralInfo);
    </script>
}

